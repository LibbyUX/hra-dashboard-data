{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": "container",
  "height": "container",
  "data": {
    "url": "https://cdn.jsdelivr.net/npm/world-atlas@2/countries-110m.json",
    "format": {
      "type": "topojson",
      "feature": "countries"
    }
  },
  "transform": [
    {
      "lookup": "id",
      "from": {
        "data": {
          "url": "https://cdn.humanatlas.io/hra-dashboard-data/usage/global-portal-usage.csv"
        },
        "key": "countryId",
        "fields": ["requests"]
      }
    }
  ],
  "mark": "geoshape",
  "encoding": {
    "color": {
      "field": "requests",
      "type": "quantitative"
    }
  }
}
