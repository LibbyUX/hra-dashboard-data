{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "HRA Products Usage",
  "data": {
    "url": "https://cdn.humanatlas.io/hra-dashboard-data/usage/hra-requests.csv"
  },
  "width": "container",
  "height": "container",
  "mark": {"type": "line", "tooltip": true},
  "encoding": {
    "x": {
      "field": "date",
      "type": "temporal"
    },
    "y": {
      "field": "requests",
      "type": "quantitative",
      "scale": { "type": "log" }
    },
    "color": {
      "field": "site",
      "type": "nominal"
    }
  }
}
