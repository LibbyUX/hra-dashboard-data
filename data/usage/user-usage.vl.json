{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Digital Object Usage",
  "data": {
    "url": "https://cdn.humanatlas.io/hra-dashboard-data/usage/user-requests.csv"
  },
  "width": "container",
  "height": "container",
  "mark": { "type": "line", "tooltip": true },
  "transform": [
    {
      "window": [
        {
          "field": "requests",
          "op": "mean",
          "as": "rolling_requests"
        }
      ],
      "frame": [-7, 7]
    }
  ],
  "encoding": {
    "x": {
      "field": "date",
      "type": "temporal"
    },
    "y": {
      "field": "rolling_requests",
      "type": "quantitative",
      "scale": { "type": "log" },
      "title": "requests"
    },
    "color": {
      "field": "user",
      "type": "nominal"
    }
  }
}
